{
	"name": "qx",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vue-tsc --noEmit && vite build",
		"preview": "vite preview",
		"init": "eslint --init",
		"lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --ignore-path .gitignore --fix",
		"prettier": "prettier --write ./**/*.{vue,ts,tsx,js,jsx,css,less,scss,json}",
		"prepare": "husky install"
	},
	"dependencies": {
		"element-plus": "^2.2.18",
		"pinia": "^2.0.23",
		"vue": "^3.2.37",
		"vue-router": "^4.1.5"
	},
	"devDependencies": {
		"@types/node": "^18.11.2",
		"@typescript-eslint/eslint-plugin": "^5.40.0",
		"@typescript-eslint/parser": "^5.40.0",
		"@vitejs/plugin-vue": "^3.1.0",
		"cz-git": "^1.3.11",
		"eslint": "^8.25.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-vue": "^9.6.0",
		"husky": "^8.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"sass": "^1.55.0",
		"typescript": "^4.6.4",
		"unplugin-auto-import": "^0.11.2",
		"unplugin-element-plus": "^0.4.1",
		"unplugin-vue-components": "^0.22.8",
		"vite": "^3.1.0",
		"vue-tsc": "^0.40.4"
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-git"
		}
	},
	"lint-staged": {
		"*.{vue,js,ts,jsx,tsx,json}": "eslint --fix",
		"*.{html,css,less,scss}": [
			"prettier --write"
		]
	}
}
