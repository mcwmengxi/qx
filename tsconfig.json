{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@build/*": ["build/*"],
    },
    // @types下的所有包会默认被引入
    "types": [
      "node",
      "vite/client",
      "vite-svg-loader",
      "element-plus/global",
    ],
    // typeRoots 下面的包会被ts编译器自动包含进来
    "typeRoots": [
      "./node_modules/@types/",
      "./types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/*.d.ts",
    "mock/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js",
    "index.html"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
